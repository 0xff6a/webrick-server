<html>
<head>
	<title>MVC</title>
</head>
<body>
	<nav>
		<a href='/posts/new'><%= erb_link %></a>
	</nav>
	<% if posts.any? %>
		<% posts.each do |post| %>
			<article>
				<h3><%= post.id %>. <%= post.title %></h3>
				<p><%= post.content %></p>
				<nav>
					<a href='/posts/delete/<%= post.id %>'>Delete Post</a>
				</nav>
			</article>
		<% end %>
	<% else %>
		<h1><%= erb_title %></h1>
	<% end %>
</body>
</html>

